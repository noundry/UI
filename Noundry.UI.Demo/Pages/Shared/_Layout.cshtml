<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Noundry UI Demo</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Alpine.js Plugins -->
    <script defer src="https://unpkg.com/@@alpinejs/collapse@@3.x.x/dist/cdn.min.js"></script>
    <script defer src="https://unpkg.com/@@alpinejs/focus@@3.x.x/dist/cdn.min.js"></script>
    
    <!-- Alpine.js -->
    <script defer src="https://unpkg.com/alpinejs@@3.x.x/dist/cdn.min.js"></script>
    
    <style>
        [x-cloak] { display: none !important; }
    </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/" class="text-xl font-bold text-gray-900 hover:text-gray-700">Noundry UI Demo</a>
                </div>
                <nav class="flex space-x-8">
                    <a href="/" class="text-gray-900 hover:text-gray-600 @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "font-semibold" : "")">Home</a>
                    <a href="/Components" class="text-gray-900 hover:text-gray-600 @(ViewContext.RouteData.Values["page"]?.ToString() == "/Components" ? "font-semibold" : "")">Components</a>
                    <a href="/Forms" class="text-gray-900 hover:text-gray-600 @(ViewContext.RouteData.Values["page"]?.ToString() == "/Forms" ? "font-semibold" : "")">Forms</a>
                    <a href="/Privacy" class="text-gray-900 hover:text-gray-600 @(ViewContext.RouteData.Values["page"]?.ToString() == "/Privacy" ? "font-semibold" : "")">Privacy</a>
                </nav>
            </div>
        </div>
    </header>

    <main class="flex-1 max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 w-full">
        @if (TempData["Success"] != null)
        {
            <noundry-alert type="success" dismissible="true" title="Success" css-class="mb-6">
                @TempData["Success"]
            </noundry-alert>
        }
        
        @if (TempData["Error"] != null)
        {
            <noundry-alert type="error" dismissible="true" title="Error" css-class="mb-6">
                @TempData["Error"]
            </noundry-alert>
        }
        
        @RenderBody()
    </main>

    <footer class="bg-white border-t mt-auto">
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-gray-500 text-sm">
                &copy; @DateTime.Now.Year - Noundry UI Demo. Built with ❤️ using Noundry UI.
            </p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>