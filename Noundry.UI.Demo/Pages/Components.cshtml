@page
@model ComponentsModel
@{
    ViewData["Title"] = "Components";
}

<div class="space-y-8">
    <div class="bg-white p-6 rounded-lg shadow">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Noundry UI Components</h1>
        <p class="text-gray-600 mb-6">
            Explore all available components in the Noundry UI library. Each component showcases different features and customization options.
        </p>
    </div>

    <!-- Alerts & Banners -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Alerts & Banners</h2>
        <div class="space-y-4">
            <noundry-alert type="info" title="Information" show-icon="true">
                This is an informational alert with an icon.
            </noundry-alert>
            
            <noundry-alert type="success" dismissible="true" title="Success">
                This is a dismissible success alert.
            </noundry-alert>
            
            <noundry-alert type="warning" title="Warning">
                This is a warning alert message.
            </noundry-alert>
            
            <noundry-alert type="error" dismissible="true" title="Error">
                This is a dismissible error alert.
            </noundry-alert>

            <noundry-banner type="info" title="Welcome!" description="This is a banner notification" dismissible="true" />
        </div>
    </div>

    <!-- Toast Notifications -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Toast Notifications</h2>
        <p class="text-gray-600 mb-6">
            Advanced toast notification system with slide animations, progress bars, and global API. 
            Click the buttons below to see different toast types in action.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <button 
                onclick="toast.success('Operation completed successfully!')" 
                class="py-3 px-4 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-lg hover:from-green-600 hover:to-green-700 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 font-medium">
                Success Toast
            </button>
            
            <button 
                onclick="toast.error('Something went wrong. Please try again.')" 
                class="py-3 px-4 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-lg hover:from-red-600 hover:to-red-700 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 font-medium">
                Error Toast
            </button>
            
            <button 
                onclick="toast.info('New update available. Check it out!')" 
                class="py-3 px-4 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-lg hover:from-blue-600 hover:to-blue-700 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 font-medium">
                Info Toast
            </button>
            
            <button 
                onclick="toast.warning('Your session will expire soon.')" 
                class="py-3 px-4 bg-gradient-to-r from-yellow-500 to-yellow-600 text-white rounded-lg hover:from-yellow-600 hover:to-yellow-700 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 font-medium">
                Warning Toast
            </button>
        </div>
        
        <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
            <label class="block text-sm font-medium text-gray-700 mb-2">Custom Toast</label>
            <div class="flex space-x-3">
                <input 
                    type="text" 
                    id="customToastMessage" 
                    class="flex-1 border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200" 
                    placeholder="Enter your custom message"
                    value="This is a custom toast message!"
                >
                <button 
                    onclick="toast.show(document.getElementById('customToastMessage').value, 'default', 5000)" 
                    class="py-3 px-6 bg-gradient-to-r from-purple-500 to-purple-600 text-white rounded-lg hover:from-purple-600 hover:to-purple-700 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 font-medium">
                    Show Toast
                </button>
            </div>
            <p class="text-xs text-gray-500 mt-2">This custom toast will display for 5 seconds</p>
        </div>
        
        <!-- Toast Container Component -->
        <noundry-toast-container position="top-right" default-duration="3000" />
    </div>

    <!-- Buttons & Badges -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Buttons & Badges</h2>
        
        <div class="mb-6">
            <h3 class="text-lg font-medium mb-3">Buttons</h3>
            <div class="flex flex-wrap gap-4 mb-4">
                <noundry-button variant="primary">Primary</noundry-button>
                <noundry-button variant="secondary">Secondary</noundry-button>
                <noundry-button variant="success">Success</noundry-button>
                <noundry-button variant="warning">Warning</noundry-button>
                <noundry-button variant="danger">Danger</noundry-button>
                <noundry-button disabled="true">Disabled</noundry-button>
            </div>
            
            <div class="flex items-center gap-4">
                <noundry-button size="sm">Small</noundry-button>
                <noundry-button size="md">Medium</noundry-button>
                <noundry-button size="lg">Large</noundry-button>
            </div>
        </div>
        
        <div>
            <h3 class="text-lg font-medium mb-3">Badges</h3>
            <div class="flex flex-wrap gap-4 items-center">
                <noundry-badge variant="default">Default</noundry-badge>
                <noundry-badge variant="success">Success</noundry-badge>
                <noundry-badge variant="warning">Warning</noundry-badge>
                <noundry-badge variant="error">Error</noundry-badge>
                <noundry-badge variant="info" outline="true">Info Outline</noundry-badge>
                <noundry-badge variant="success" pill="true" icon="check">Success Pill</noundry-badge>
            </div>
        </div>
    </div>

    <!-- Navigation Components -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Navigation</h2>
        
        <div class="space-y-6">
            <div>
                <h3 class="text-lg font-medium mb-3">Breadcrumbs</h3>
                <noundry-breadcrumbs>
                    <noundry-breadcrumb-item text="Home" href="/" />
                    <noundry-breadcrumb-item text="Components" href="/components" />
                    <noundry-breadcrumb-item text="Navigation" current="true" />
                </noundry-breadcrumbs>
            </div>
            
            <div>
                <h3 class="text-lg font-medium mb-3">Tabs</h3>
                <noundry-tabs>
                    <noundry-tab-item title="Overview" active="true">
                        <div class="p-4 border rounded-lg">
                            <h4 class="font-semibold mb-2">Component Overview</h4>
                            <p>This tab shows an overview of the component features.</p>
                        </div>
                    </noundry-tab-item>
                    <noundry-tab-item title="Configuration">
                        <div class="p-4 border rounded-lg">
                            <h4 class="font-semibold mb-2">Configuration Options</h4>
                            <p>Here you can configure component settings.</p>
                        </div>
                    </noundry-tab-item>
                    <noundry-tab-item title="Advanced">
                        <div class="p-4 border rounded-lg">
                            <h4 class="font-semibold mb-2">Advanced Features</h4>
                            <p>Advanced configuration and customization options.</p>
                        </div>
                    </noundry-tab-item>
                </noundry-tabs>
            </div>
            
            <div>
                <h3 class="text-lg font-medium mb-3">Accordion</h3>
                <noundry-accordion>
                    <noundry-accordion-item title="What is Noundry UI?">
                        Noundry UI is a modern C# ASP.NET TagHelper library that provides server-side components with Alpine.js and Tailwind CSS integration.
                    </noundry-accordion-item>
                    <noundry-accordion-item title="How do I use it?">
                        Simply add the NuGet package, include Alpine.js and Tailwind CSS, then use the noundry-* tags in your Razor views.
                    </noundry-accordion-item>
                    <noundry-accordion-item title="What components are available?">
                        The library includes 25+ components including buttons, modals, alerts, forms, navigation, and data display components.
                    </noundry-accordion-item>
                </noundry-accordion>
            </div>
        </div>
    </div>

    <!-- Interactive Components -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Interactive Components</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h3 class="text-lg font-medium mb-3">Modals & Overlays</h3>
                <div class="space-y-4">
                    <noundry-modal title="Sample Modal" button-text="Open Modal">
                        <p class="mb-4">This is a sample modal with some content.</p>
                        <noundry-button variant="primary">Action</noundry-button>
                    </noundry-modal>
                    
                    <noundry-slide-over title="Slide Over Panel" button-text="Open Slide Over">
                        <p class="mb-4">This is a slide over panel that comes from the side.</p>
                        <noundry-text-input label="Sample Input" placeholder="Enter some text" />
                    </noundry-slide-over>
                </div>
            </div>
            
            <div>
                <h3 class="text-lg font-medium mb-3">Dropdowns & Menus</h3>
                <div class="space-y-4">
                    <noundry-dropdown-menu button-text="User Menu" 
                                          user-name="John Doe" 
                                          user-subtitle="john@example.com">
                        <noundry-dropdown-item text="Profile" icon="user" />
                        <noundry-dropdown-item text="Settings" icon="settings" shortcut="⌘S" />
                        <noundry-dropdown-item is-separator="true" />
                        <noundry-dropdown-item text="Sign Out" />
                    </noundry-dropdown-menu>
                    
                    <noundry-context-menu trigger-text="Right click for context menu">
                        <noundry-context-menu-item text="Copy" icon="copy" shortcut="⌘C" />
                        <noundry-context-menu-item text="Paste" icon="paste" shortcut="⌘V" />
                        <noundry-context-menu-item is-separator="true" />
                        <noundry-context-menu-item text="Delete" icon="trash" />
                    </noundry-context-menu>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Display -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Data Display</h2>
        
        <div class="space-y-6">
            <div>
                <h3 class="text-lg font-medium mb-3">Progress & Rating</h3>
                <div class="space-y-4">
                    <noundry-progress value="75" label="Upload Progress" show-percentage="true" />
                    <noundry-rating label="Rate this component" max-stars="5" show-feedback="true" />
                </div>
            </div>
            
            <div>
                <h3 class="text-lg font-medium mb-3">Basic Data Table</h3>
                <noundry-table striped="true" hoverable="true">
                    <noundry-table-head>
                        <noundry-table-row>
                            <noundry-table-header sortable="true">Name</noundry-table-header>
                            <noundry-table-header sortable="true">Email</noundry-table-header>
                            <noundry-table-header>Role</noundry-table-header>
                            <noundry-table-header>Actions</noundry-table-header>
                        </noundry-table-row>
                    </noundry-table-head>
                    <noundry-table-body>
                        <noundry-table-row>
                            <noundry-table-cell>John Doe</noundry-table-cell>
                            <noundry-table-cell>john@example.com</noundry-table-cell>
                            <noundry-table-cell><noundry-badge variant="success">Admin</noundry-badge></noundry-table-cell>
                            <noundry-table-cell>
                                <noundry-button size="sm" variant="secondary">Edit</noundry-button>
                            </noundry-table-cell>
                        </noundry-table-row>
                        <noundry-table-row>
                            <noundry-table-cell>Jane Smith</noundry-table-cell>
                            <noundry-table-cell>jane@example.com</noundry-table-cell>
                            <noundry-table-cell><noundry-badge variant="info">User</noundry-badge></noundry-table-cell>
                            <noundry-table-cell>
                                <noundry-button size="sm" variant="secondary">Edit</noundry-button>
                            </noundry-table-cell>
                        </noundry-table-row>
                    </noundry-table-body>
                </noundry-table>
            </div>
        </div>
        
        <!-- Advanced Data Table -->
        <div class="mt-6">
            <h3 class="text-lg font-medium mb-3">Advanced Data Table with API</h3>
            <noundry-data-table title="Posts from API" 
                               api-url="https://jsonplaceholder.typicode.com/posts"
                               per-page="5"
                               show-search="true"
                               show-pagination="true"
                               hoverable="true">
                <noundry-data-table-column key="id" label="ID" sortable="true" />
                <noundry-data-table-column key="title" label="Title" sortable="true" href="/posts/{id}" href-text="{title}" />
                <noundry-data-table-column key="body" label="Body" sortable="false" />
            </noundry-data-table>
        </div>
        
        <div class="mt-6">
            <h3 class="text-lg font-medium mb-3">Static Data Table</h3>
            <noundry-data-table title="Local Data" 
                               show-search="true"
                               show-pagination="true"
                               per-page="3"
                               hoverable="true">
                <noundry-data-table-column key="name" label="Name" sortable="true" />
                <noundry-data-table-column key="status" label="Status" sortable="true" />
                <noundry-data-table-column key="role" label="Role" sortable="false" />
                
                <noundry-data-table-row>
                    <noundry-data-table-cell key="name">Alice Johnson</noundry-data-table-cell>
                    <noundry-data-table-cell key="status">Active</noundry-data-table-cell>
                    <noundry-data-table-cell key="role">Administrator</noundry-data-table-cell>
                </noundry-data-table-row>
                
                <noundry-data-table-row>
                    <noundry-data-table-cell key="name">Bob Smith</noundry-data-table-cell>
                    <noundry-data-table-cell key="status">Inactive</noundry-data-table-cell>
                    <noundry-data-table-cell key="role">User</noundry-data-table-cell>
                </noundry-data-table-row>
                
                <noundry-data-table-row>
                    <noundry-data-table-cell key="name">Carol Williams</noundry-data-table-cell>
                    <noundry-data-table-cell key="status">Active</noundry-data-table-cell>
                    <noundry-data-table-cell key="role">Moderator</noundry-data-table-cell>
                </noundry-data-table-row>
                
                <noundry-data-table-row>
                    <noundry-data-table-cell key="name">David Brown</noundry-data-table-cell>
                    <noundry-data-table-cell key="status">Active</noundry-data-table-cell>
                    <noundry-data-table-cell key="role">User</noundry-data-table-cell>
                </noundry-data-table-row>
                
                <noundry-data-table-row>
                    <noundry-data-table-cell key="name">Emma Davis</noundry-data-table-cell>
                    <noundry-data-table-cell key="status">Pending</noundry-data-table-cell>
                    <noundry-data-table-cell key="role">User</noundry-data-table-cell>
                </noundry-data-table-row>
            </noundry-data-table>
        </div>
        
        <div class="mt-6">
            <h3 class="text-lg font-medium mb-3">Data Table with Expandable Rows</h3>
            <p class="text-sm text-gray-600 mb-4">
                Click the expand button on each row to load additional details from the API. The expanded content slides down smoothly with x-collapse animation.
                This example shows both client-side parameters (from row data) and server-side arguments (from the model).
            </p>
            <noundry-data-table title="Users with Expandable Profiles" 
                               api-url="https://jsonplaceholder.typicode.com/users"
                               per-page="4"
                               show-search="true"
                               show-pagination="true"
                               hoverable="true">
                <noundry-data-table-column key="id" label="ID" sortable="true" />
                <noundry-data-table-column key="name" label="Name" sortable="true" />
                <noundry-data-table-column key="email" label="Email" sortable="true" />
                <noundry-data-table-column key="website" label="Website" sortable="true" />
                
                <!-- Expandable row with comprehensive configuration -->
                <noundry-data-table-expandable-row 
                    api-url="https://jsonplaceholder.typicode.com/users/{id}/albums"
                    button-text="View Albums"
                    api-parameters="limit=5&sortBy=title"
                    loading-text="Loading user albums..."
                    error-text="Failed to load albums. Please try again."
                    container-class="bg-blue-50 border border-blue-200 rounded-lg p-4" />
            </noundry-data-table>
        </div>
        
        <div class="mt-6">
            <h3 class="text-lg font-medium mb-3">Data Table with Icon Expandable Rows</h3>
            <p class="text-sm text-gray-600 mb-4">
                This example uses icon-only expand buttons with minimal UI. Perfect for compact layouts where space is limited.
                Shows how to combine API parameters with nested data access.
            </p>
            <noundry-data-table title="Posts with Comment Preview" 
                               api-url="https://jsonplaceholder.typicode.com/posts"
                               per-page="3"
                               show-search="true"
                               hoverable="true">
                <noundry-data-table-column key="id" label="ID" sortable="true" />
                <noundry-data-table-column key="title" label="Title" sortable="true" />
                <noundry-data-table-column key="userId" label="Author" sortable="true" />
                
                <!-- Compact icon-based expandable row -->
                <noundry-data-table-expandable-row 
                    api-url="https://jsonplaceholder.typicode.com/posts/{id}/comments"
                    show-as-icon="true"
                    api-parameters="limit=3&fields=name,email,body"
                    loading-text="Loading comments..."
                    error-text="Unable to load comments"
                    container-class="border-l-4 border-green-400 bg-green-50 p-3" />
            </noundry-data-table>
        </div>
    </div>

    <!-- Skeleton Loading States -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Skeleton Loading States</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div>
                <h3 class="font-medium mb-3">Basic Skeletons</h3>
                <noundry-skeleton-container>
                    <noundry-skeleton variant="text" height="h-6" width="w-3/4" />
                    <noundry-skeleton variant="text" height="h-4" />
                    <noundry-skeleton variant="text" height="h-4" width="w-5/6" />
                </noundry-skeleton-container>
            </div>
            
            <div>
                <h3 class="font-medium mb-3">Avatar & Profile</h3>
                <noundry-skeleton-container container-class="flex items-center space-x-3">
                    <noundry-skeleton variant="avatar" size="lg" />
                    <div class="flex-1 space-y-2">
                        <noundry-skeleton variant="text" height="h-5" width="w-3/4" />
                        <noundry-skeleton variant="text" height="h-4" width="w-1/2" />
                    </div>
                </noundry-skeleton-container>
            </div>
            
            <div>
                <h3 class="font-medium mb-3">Card Layout</h3>
                <noundry-skeleton-card show-image="true" show-avatar="true" text-lines="3" />
            </div>
        </div>
        
        <div class="mt-6">
            <h3 class="font-medium mb-3">Multi-line Text</h3>
            <noundry-skeleton-text lines="4" variable-width="true" />
        </div>
        
        <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h3 class="font-medium mb-3">Circle Variants</h3>
                <div class="flex items-center space-x-4">
                    <noundry-skeleton variant="circle" width="3rem" height="h-12" />
                    <noundry-skeleton variant="circle" width="4rem" height="h-16" />
                    <noundry-skeleton variant="circle" width="5rem" height="h-20" />
                </div>
            </div>
            
            <div>
                <h3 class="font-medium mb-3">Custom Dimensions</h3>
                <noundry-skeleton-container>
                    <noundry-skeleton variant="rectangle" height="h-32" width="w-full" />
                    <noundry-skeleton variant="text" height="h-6" width="w-2/3" />
                    <noundry-skeleton variant="text" height="h-4" width="w-4/5" />
                </noundry-skeleton-container>
            </div>
        </div>
    </div>

    <!-- Toast Notifications -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Toast Notifications</h2>
        <div class="flex gap-4">
            <noundry-toast type="info" title="Info" trigger-text="Show Info">
                This is an informational toast.
            </noundry-toast>
            
            <noundry-toast type="success" title="Success" trigger-text="Show Success">
                Action completed successfully!
            </noundry-toast>
            
            <noundry-toast type="warning" title="Warning" trigger-text="Show Warning">
                Please be aware of this warning.
            </noundry-toast>
            
            <noundry-toast type="error" title="Error" trigger-text="Show Error">
                An error occurred.
            </noundry-toast>
        </div>
    </div>
</div>