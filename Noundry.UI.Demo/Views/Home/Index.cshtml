@model DemoViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="space-y-8">
    <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Noundry UI Demo</h2>
        <p class="text-gray-600 mb-6">
            This demo showcases the Noundry UI components that provide server-side rendering
            of interactive UI components with Alpine.js and Tailwind CSS integration.
        </p>
    </div>

    <!-- Alerts Demo -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold mb-4">Alerts</h3>
        <div class="space-y-4">
            <noundry-alert type="info" title="Information">
                This is an informational alert message.
            </noundry-alert>
            
            <noundry-alert type="success" dismissible="true">
                This is a success alert that can be dismissed.
            </noundry-alert>
            
            <noundry-alert type="warning" show-icon="true" title="Warning">
                This is a warning alert with an icon.
            </noundry-alert>
            
            <noundry-alert type="error" dismissible="true" title="Error">
                This is an error alert that can be dismissed.
            </noundry-alert>
        </div>
    </div>

    <!-- Buttons Demo -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold mb-4">Buttons</h3>
        <div class="flex flex-wrap gap-4">
            <noundry-button variant="primary">Primary</noundry-button>
            <noundry-button variant="secondary">Secondary</noundry-button>
            <noundry-button variant="success">Success</noundry-button>
            <noundry-button variant="warning">Warning</noundry-button>
            <noundry-button variant="danger">Danger</noundry-button>
            <noundry-button disabled="true">Disabled</noundry-button>
        </div>
        
        <div class="mt-4">
            <h4 class="font-medium mb-2">Button Sizes</h4>
            <div class="flex items-center gap-4">
                <noundry-button size="sm">Small</noundry-button>
                <noundry-button size="md">Medium</noundry-button>
                <noundry-button size="lg">Large</noundry-button>
            </div>
        </div>
    </div>

    <!-- Badges Demo -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold mb-4">Badges</h3>
        <div class="flex flex-wrap gap-4 items-center">
            <noundry-badge variant="default">Default</noundry-badge>
            <noundry-badge variant="success">Success</noundry-badge>
            <noundry-badge variant="warning">Warning</noundry-badge>
            <noundry-badge variant="error">Error</noundry-badge>
            <noundry-badge variant="info" outline="true">Info Outline</noundry-badge>
            <noundry-badge variant="success" pill="true" icon="check">Success Pill</noundry-badge>
        </div>
    </div>

    <!-- Modal Demo -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold mb-4">Modal</h3>
        <noundry-modal title="Demo Modal" button-text="Open Modal" button-variant="primary">
            <p class="mb-4">This is a modal dialog with some content.</p>
            <p>You can put any content here, including forms, images, or other components.</p>
        </noundry-modal>
    </div>

    <!-- Accordion Demo -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold mb-4">Accordion</h3>
        <noundry-accordion>
            <noundry-accordion-item title="What is Noundry UI?">
                Noundry UI is a C# ASP.NET library that provides server-side rendering 
                of interactive UI components based on the Noundry UI library, designed for use 
                with Alpine.js and Tailwind CSS.
            </noundry-accordion-item>
            <noundry-accordion-item title="How do I use it?">
                Simply add the TagHelper library to your ASP.NET project, include Alpine.js 
                and Tailwind CSS, and start using the noundry-* tags in your Razor views.
            </noundry-accordion-item>
            <noundry-accordion-item title="What components are available?">
                The library includes buttons, modals, alerts, badges, accordions, tabs, 
                forms controls, and many more interactive components.
            </noundry-accordion-item>
        </noundry-accordion>
    </div>

    <!-- Tabs Demo -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold mb-4">Tabs</h3>
        <noundry-tabs>
            <noundry-tab-item title="Account" active="true">
                <div class="border rounded-lg shadow-sm bg-card text-neutral-900">
                    <div class="flex flex-col space-y-1.5 p-6">
                        <h3 class="text-lg font-semibold leading-none tracking-tight">Account Settings</h3>
                        <p class="text-sm text-neutral-500">Manage your account information here.</p>
                    </div>
                    <div class="p-6 pt-0 space-y-2">
                        <p>This is the account tab content with account-related information.</p>
                    </div>
                </div>
            </noundry-tab-item>
            <noundry-tab-item title="Security">
                <div class="border rounded-lg shadow-sm bg-card text-neutral-900">
                    <div class="flex flex-col space-y-1.5 p-6">
                        <h3 class="text-lg font-semibold leading-none tracking-tight">Security Settings</h3>
                        <p class="text-sm text-neutral-500">Configure your security preferences.</p>
                    </div>
                    <div class="p-6 pt-0 space-y-2">
                        <p>This is the security tab content with security-related settings.</p>
                    </div>
                </div>
            </noundry-tab-item>
        </noundry-tabs>
    </div>

    <!-- Form Demo -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold mb-4">Form Components</h3>
        
        <form asp-action="Index" method="post" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <noundry-text-input asp-for="Name" label="Full Name" placeholder="Enter your full name" />
                <noundry-text-input asp-for="Email" type="email" placeholder="Enter your email" />
            </div>
            
            <noundry-switch asp-for="EnableNotifications" label="Enable Notifications" />
            
            <noundry-date-picker asp-for="BirthDate" placeholder="Select your birth date" />
            
            <noundry-select asp-for="FavoriteColor" placeholder="Choose your favorite color">
                <noundry-option value="">-- Select Color --</noundry-option>
                <noundry-option value="red">Red</noundry-option>
                <noundry-option value="blue">Blue</noundry-option>
                <noundry-option value="green">Green</noundry-option>
                <noundry-option value="yellow">Yellow</noundry-option>
            </noundry-select>
            
            <div class="flex gap-4">
                <noundry-button type="submit" variant="primary">Submit Form</noundry-button>
                <noundry-button type="button" variant="secondary">Cancel</noundry-button>
            </div>
        </form>
    </div>

    <!-- Toast Demo -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold mb-4">Toast Notifications</h3>
        <div class="flex gap-4">
            <noundry-toast type="info" title="Info" trigger-text="Show Info">
                This is an informational toast notification.
            </noundry-toast>
            
            <noundry-toast type="success" title="Success" trigger-text="Show Success">
                Action completed successfully!
            </noundry-toast>
            
            <noundry-toast type="warning" title="Warning" trigger-text="Show Warning">
                Please be aware of this warning.
            </noundry-toast>
            
            <noundry-toast type="error" title="Error" trigger-text="Show Error">
                An error occurred while processing.
            </noundry-toast>
        </div>
    </div>

    <!-- Dropdown Menu Demo -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold mb-4">Dropdown Menu</h3>
        <noundry-dropdown-menu button-text="User Menu" 
                            avatar-url="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"
                            user-name="John Doe" 
                            user-subtitle="john@example.com">
            <noundry-dropdown-item text="Profile" icon="user" href="#profile" />
            <noundry-dropdown-item text="Settings" icon="settings" shortcut="âŒ˜S" />
            <noundry-dropdown-item is-separator="true" />
            <noundry-dropdown-item text="Sign Out" icon="external-link" />
        </noundry-dropdown-menu>
    </div>
</div>